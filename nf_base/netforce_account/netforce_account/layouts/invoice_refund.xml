<form model="invoice.refund" title="Make a refund" form_layout="stacked">
    <field name="invoice_id" invisible="1"/>
    <field name="amount" span="2"/>
    <field name="date" span="2"/>
    <field name="account_id" span="2"/>
    <field name="ref" span="2"/>
    <button string="Add Refund" method="add_refund" type="success" icon="ok" span="2"/>
</form>
