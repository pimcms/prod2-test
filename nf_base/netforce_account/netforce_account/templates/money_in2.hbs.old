{{#with context.data}}
    <div style="float:right;width:140px">
        <a href="#name=cust_invoice&tab_no=4" style="font-size:12px">{{t "Overdue Invoices"}} ({{overdue_count}})</a>
        <b>{{currency overdue_amount}}</b>
    </div>
    <div style="float:right;width:140px">
        <a href="#name=cust_invoice&tab_no=2" style="font-size:12px">{{t "Draft Invoices"}} ({{draft_count}})</a>
        <b>{{currency draft_amount}}</b>
    </div>
{{/with}}
{{view "button" string="New Receivable Invoice" icon="plus-sign" action="cust_invoice" action_options="mode=form&form_view_xml=cust_invoice_form&defaults.type=out&defaults.inv_type=invoice" context=context}}
{{view "chart" height="150" type="bar" context=context}}
