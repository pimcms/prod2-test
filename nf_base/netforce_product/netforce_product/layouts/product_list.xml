<list model="product" priority="1">
    <head>
        <button string="Print Labels" icon="print" action="product_label" action_options="convert=pdf"/>
        <button string="Print" icon="print" action="report_product_form" action_options='{"ids":ids}'/>
        <button string="Print (old)" icon="print" action="report_product_form_old" action_options='{"ids":ids}'/>
        <button string="Approve" method="approve" icon="ok" perm="approve_product"/>
        <button string="Draft" method="to_draft"/>
        <button string="Create Thumbnails" method="create_thumbnails" icon="th"/>
        <button string="Download Remote Images" method="download_remote_images"/>
    </head>
    <field name="code"/>
    <field name="name"/>
    <field name="type"/>
    <field name="uom_id"/>
    <field name="categ_id"/>
    <field name="brand_id"/>
    <field name="sale_price"/>
    <field name="purchase_price"/>
    <field name="state"/>
</list>
