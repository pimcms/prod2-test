<center>
    <h2>
        Unpaid Sales Report
    </h2>
    <h3>
        {{company_name}}
        <br/>
        From {{fmt_date date_from}} to {{fmt_date date_to}}
    </h3>
</center>
<table class="table">
    <thead class="scroll-header">
        <tr>
            <th>
                Order Number
            </th>
            <th>
                Cart Number
            </th>
            <th>
                Order Date
            </th>
            <th>
                Customer Name
            </th>
            <th>
                Telephone
            </th>
            <th>
                Payment Method
            </th>
            <th style="text-align:right">
                Order Amount
            </th>
        </tr>
    </thead>
    <tbody>
        {{#each lines}}
            <tr>
                <td>
                    {{#link action="sale" active_id=id}}
                        {{number}}
                    {{/link}}
                </td>
                <td>
                    {{#link action="ecom_cart" active_id=related_id}}
                        {{related_number}}
                    {{/link}}
                </td>
                <td>
                    {{fmt_date date}}
                </td>
                <td>
                    {{customer_name}}
                </td>
                <td>
                    {{phone}}
                </td>
                <td>
                    {{pay_method}}
                </td>
                <td style="text-align:right">
                    {{currency amount}}
                </td>
            </tr>
        {{/each}}
    </tbody>
    <tfoot>
        <tr>
            <th colspan="5">Total</th>
            <th style="text-align:right">
                {{currency total}}
            </th>
        </tr>
    </tfoot>
</table>
