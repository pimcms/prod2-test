<center>
    <h2>
        {{product_name}} Sales
    </h2>
    <h3>
        {{company_name}}
        <br/>
        From {{fmt_date date_from}} to {{fmt_date date_to}}
    </h3>
</center>
<table class="table">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                To
            </th>
            <th>
                Description
            </th>
            <th>
                Qty
            </th>
            <th>
                Unit Price
            </th>
            <th>
                Disc %
            </th>
            <th>
                Total
            </th>
        </tr>
    </thead>
    <tbody>
        {{#each lines}}
            <tr>
                <td>
                    <a href="/ui#name=cust_invoice_edit&active_id={{invoice_id.0.}}">
                        {{fmt_date invoice_date}}
                    </a>
                </td>
                <td>
                    {{invoice_contact_id.1.}}
                </td>
                <td>
                    {{description}}
                </td>
                <td>
                    {{qty}}
                </td>
                <td>
                    {{currency unit_price}}
                </td>
                <td>
                    {{discount}}
                </td>
                <td>
                    {{currency amount}}
                </td>
            </tr>
        {{/each}}
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3">
                Total
            </th>
            <th>
                {{total_qty}}
            </th>
            <th colspan="2">
            </th>
            <th>
                {{currency total_amount}}
            </th>
        </tr>
    </tfoot>
</table>
