<pivot model="purchase.order" rows="contact_id.name" cols="state" agg_name="count" vals="amount_total">
    <field name="number"/>
    <field name="contact_id.name" string="Supplier"/>
    <field name="contact_id.categ_id.name" string="Supplier Category"/>
    <field name="state"/>
    <field name="user_id.name" string="Responsible User"/>
    <field name="date"/>
    <field name="date_month"/>
    <field name="date_week"/>
    <field name="amount_total"/>
    <field name="amount_total_cur"/>
    <field name="currency_id.code" string="Currency"/>
    <field name="pay_term_id.name" string="Payment Terms"/>
    <field name="ship_term_id.name" string="Shipping Terms"/>
</pivot>
