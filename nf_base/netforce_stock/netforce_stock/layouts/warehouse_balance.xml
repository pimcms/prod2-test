        <button string="New Goods Transfer" method="make_transfer" icon="plus-sign"/>
        <button string="New Goods Issue" method="make_issue" icon="plus-sign"/>
    </head>
    <search>
        <field name="product_id"/>
        <field name="lot_id"/>
        <field name="container_id"/>
