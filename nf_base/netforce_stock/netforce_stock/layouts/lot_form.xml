<form model="stock.lot">
    <head>
        <button string="Print" icon="print" action="report_lot_form" action_options='{"active_id":id}'/>
        <button string="Options">
            <item string="Update shelf life dates" method="update_life_dates"/>
        </button>
    </head>
    <field name="number"/>
    <field name="supp_lot_no"/>
    <separator/>
    <field name="received_date"/>
    <field name="mfg_date"/>
    <field name="expiry_date"/>
    <field name="life_remain_percent"/>
    <newline/>
    <field name="life_75_date"/>
    <field name="life_50_date"/>
    <separator/>
    <field name="description"/>
    <field name="weight"/>
    <field name="width"/>
    <field name="length"/>
    <field name="product_id"/>
    <field name="url"/>
    <related>
        <field name="lot_items"/>
        <field name="stock_balances"/>
        <field name="expiry_moves"/>
        <field name="comments"/>
    </related>
</form>
